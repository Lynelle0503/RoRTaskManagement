

<%= form_with model:task do |f| %>
    <%= render "shared/form_errors", model:task %>
    <p>
        <%= f.label :name, "Task Name" %>
        <%= f.text_field :name %>
    </p>
    <p>
        <%= f.label :body, "Task Description" %>
        <%= f.text_area :body %>
    </p>
    <p>
        <%= f.label :due, "Task Due on" %>
        <%= f.date_select :due %>
    </p>
    <p>
        <%= f.label :done, "Task Completed?" %>
        <%= f.check_box :done %>
    </p>
    <p>
        <%= f.label :category, "Task Category" %>
        <%= f.select :category, Category.all.map {|t| t.name}, :prompt=>"Choose Category"%>
    </p>
    <p> <%= f.submit %> </p>

    <%= params[:category] %>
<% end %>