<h2>Create your Account</h2>
<%= form_with model: @user, url: registrations_path, local: true  do |f| %>
    <%= render "shared/form_errors", model: @user %>
    <%= f.label :email_address, "Email Address : " %>
    <%= f.email_field :email_address, required: true, autocomplete: "Email Address", placeholder: "Enter your email id", maxlength: 80 %><br>
    <%= f.label :password, "Password : " %>
    <%= f.password_field :password, required: true, autocomplete: "new-password", placeholder: "Enter new password", maxlength: 72 %><br>
    <%= f.label :password_confirmation, "Confirm Password : " %>
    <%= f.password_field :password_confirmation, required: true, autocomplete: "new-password", placeholder: "Renter new password", maxlength: 72 %><br>
    <%= f.submit "Register", disable_with: 'Registering...' %>
<% end %>
<br>
